#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

#define QWERTY 0
#define SYM    1
#define SYM_2  2
#define FNC    3
#define FNC_2  4

&mt {
    //  flavor = "tap-preferred";
    // tapping_term_ms = <200>;

    tapping-term-ms = <230>;
    flavor = "tap-preferred";
};

/ {
    combos {
        compatible = "zmk,combos";

        esc {
            bindings = <&kp ESCAPE>;
            key-positions = <1 2>;
            layers = <0 1 2 3>;
        };

        cut {
            bindings = <&kp LC(X)>;
            key-positions = <26 27>;
            layers = <0 1 2 3>;
        };

        copy {
            bindings = <&kp LC(C)>;
            key-positions = <27 28>;
            layers = <0 1 2 3>;
        };

        paste {
            bindings = <&kp LC(V)>;
            key-positions = <29 28>;
            layers = <0 1 2 3>;
        };

        to_default {
            bindings = <&to 0>;
            key-positions = <10 1>;
            layers = <1 2 3 4>;
        };

        alt_quotes {
            bindings = <&kp SINGLE_QUOTE>;
            key-positions = <5 4>;
            layers = <0>;
        };

        numpad {
            bindings = <&to 3>;
            key-positions = <13 2 15>;
            layers = <0>;
        };

        backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <3 4>;
            layers = <0 2 3 1>;
        };

        delete {
            bindings = <&kp DELETE>;
            key-positions = <7 8>;
            layers = <0 1 2 3>;
        };

        settings {
            bindings = <&to 4>;
            key-positions = <1 2 3>;
            layers = <0>;
        };

        improve_prompt {
            bindings = <&llm_prompt>;
            key-positions = <21 37>;
            layers = <0>;
        };

        alt_ret {
            bindings = <&kp RET>;
            key-positions = <16 17>;
            layers = <0 1 2 3>;
        };

        capsword {
            bindings = <&custom_capsword>;
            key-positions = <34 33>;
            layers = <0>;
        };

        alt_tab {
            bindings = <&kp TAB>;
            key-positions = <19 18>;
        };
    };

    macros {
        llm_prompt: llm_prompt {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(RET) &kp MINUS &kp MINUS &kp MINUS &kp SPACE &kp I &kp M &kp P &kp R &kp O &kp V &kp E &kp SPACE &kp T &kp H &kp E &kp SPACE &kp W &kp R &kp I &kp T &kp I &kp N &kp G &kp RETURN>;
            label = "LLM_PROMPT";
        };
    };

    behaviors {
        german_ae: german_ae {
            compatible = "zmk,behavior-mod-morph";
            label = "GERMAN_AE";
            bindings = <&kp A>, <&kp RA(A)>;

            #binding-cells = <0>;
            mods = <(MOD_LALT)>;
        };

        german_ue: german_ue {
            compatible = "zmk,behavior-mod-morph";
            label = "GERMAN_UE";
            bindings = <&kp U>, <&kp RA(U)>;

            #binding-cells = <0>;
            mods = <(MOD_LALT)>;
        };

        german_oe: german_oe {
            compatible = "zmk,behavior-mod-morph";
            label = "GERMAN_OE";
            bindings = <&kp O>, <&kp RA(O)>;

            #binding-cells = <0>;
            mods = <(MOD_LALT)>;
        };

        german_ss: german_ss {
            compatible = "zmk,behavior-mod-morph";
            label = "GERMAN_SS";
            bindings = <&kp S>, <&kp RA(S)>;

            #binding-cells = <0>;
            mods = <(MOD_LALT)>;
        };

        custom_capsword: custom_capsword {
            compatible = "zmk,behavior-caps-word";
            label = "CUSTOM_CAPSWORD";
            #binding-cells = <0>;
            continue-list = <COLON MINUS KP_MINUS SLASH BACKSLASH UNDERSCORE UNDER>;
        };

        alt_a: alt_a {
            compatible = "zmk,behavior-hold-tap";
            label = "ALT_A";
            bindings = <&kp>, <&german_ae>;

            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <230>;
        };

        alt_o: alt_o {
            compatible = "zmk,behavior-hold-tap";
            label = "ALT_O";
            bindings = <&kp>, <&german_oe>;

            #binding-cells = <2>;
            tapping-term-ms = <230>;
            flavor = "tap-preferred";
        };

        alt_s: alt_s {
            compatible = "zmk,behavior-hold-tap";
            label = "ALT_S";
            bindings = <&kp>, <&german_ss>;

            #binding-cells = <2>;
            tapping-term-ms = <230>;
            flavor = "tap-preferred";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        colemak_base {
            bindings = <
&none  &mt ESCAPE Q       &kp W           &kp F           &kp P             &kp B          &kp J         &mt SEMI L         &german_ue   &kp Y            &mt UNDER MINUS     &none
&none  &alt_a LEFT_GUI 0  &mt LEFT_ALT R  &alt_s LCTRL 0  &mt LEFT_SHIFT T  &kp G          &kp M         &mt RIGHT_SHIFT N  &mt RCTRL E  &mt RIGHT_ALT I  &alt_o RIGHT_GUI 0  &none
&none  &lt 2 Z            &kp X           &kp C           &kp D             &kp V          &kp SLASH     &kp K              &kp H        &mt COLON COMMA  &lt 2 DOT           &none
                                          &key_repeat     &lt 1 BACKSPACE   &lt 2 SPACE    &lt 3 RETURN  &lt 1 TAB          &sl 2
            >;
        };

        symbol {
            bindings = <
&none  &kp HASH            &kp AT              &kp LESS_THAN         &kp GREATER_THAN       &kp TILDE           &kp MINUS  &kp LEFT_BRACE                    &kp RIGHT_BRACE              &kp GRAVE                   &kp COLON                    &none
&none  &mt LEFT_GUI CARET  &mt LEFT_ALT EQUAL  &mt LCTRL UNDERSCORE  &mt LEFT_SHIFT DOLLAR  &kp ASTERISK        &kp PLUS   &mt RIGHT_SHIFT LEFT_PARENTHESIS  &mt RCTRL RIGHT_PARENTHESIS  &mt RIGHT_ALT LEFT_BRACKET  &mt RIGHT_GUI RIGHT_BRACKET  &none
&none  &kp BACKSLASH       &kp PIPE            &kp PRCNT             &kp SEMI               &kp SINGLE_QUOTE    &kp DQT    &kp EXCL                          &kp AMPS                     &kp UNDER                   &kp SLASH                    &none
                                               &trans                &trans                 &kp DELETE          &trans     &trans                            &trans
            >;
        };

        number-and-fn {
            bindings = <
&none  &kp N9             &kp N5       &kp N0         &kp NUMBER_3       &kp N7        &kp N6  &kp NUMBER_2          &kp NUMBER_1       &kp NUMBER_4             &kp N8             &none
&none  &mt LEFT_GUI EXCL  &mt LALT AT  &mt LCTRL SQT  &mt LEFT_SHIFT F4  &trans        &trans  &mt RIGHT_SHIFT HOME  &mt RCTRL PAGE_UP  &mt RIGHT_ALT PAGE_DOWN  &mt RIGHT_GUI END  &none
&none  &kp F1             &kp F2       &kp F3         &kp F4             &kp F5        &kp F6  &kp F7                &kp F8             &kp F11                  &kp F12            &none
                                       &trans         &trans             &kp DELETE    &trans  &trans                &trans
            >;
        };

        numpad_arrow {
            bindings = <
&none  &to 0   &trans    &kp UP_ARROW  &trans     &trans        &kp FSLH      &kp N7  &kp N8  &kp N9  &kp MINUS  &none
&none  &trans  &kp LEFT  &kp DOWN      &kp RIGHT  &trans        &kp ASTERISK  &kp N4  &kp N5  &kp N6  &kp PLUS   &none
&none  &trans  &trans    &trans        &trans     &trans        &kp N0        &kp N1  &kp N2  &kp N3  &kp ENTER  &none
                         &trans        &kp SPACE  &kp DELETE    &to 3         &trans  &trans
            >;
        };

        settings {
            bindings = <
&none  &to 0      &none  &none       &bt BT_SEL 0  &bt BT_SEL 1    &bt BT_SEL 2  &bt BT_SEL 3  &none  &none        &kp A  &none
&none  &none      &none  &none       &none         &none           &none         &none         &none  &none        &none  &none
&none  &soft_off  &none  &bt BT_CLR  &none         &tog 0          &to 0         &none         &none  &bootloader  &none  &none
                         &none       &none         &none           &none         &none         &none
            >;
        };
    };
};
